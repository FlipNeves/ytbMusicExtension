{
    "manifest_version": 3,
    "name": "Focus Music Player",
    "version": "1.0.0",
    "description": "Focus Music Player: ExperiÃªncia imersiva para YouTube Music com modo foco",
    "icons": {
        "16": "icon48.png",
        "48": "icon48.png",
        "128": "icon.png"
    },
    "action": {
        "default_title": "Abrir YouTube Music",
        "default_icon": {
            "16": "icon48.png",
            "48": "icon48.png",
            "128": "icon.png"
        }
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "css": [
                "assets/content.css"
            ],
            "js": [
                "assets/content.js"
            ]
        },
        {
            "matches": [
                "https://music.youtube.com/*"
            ],
            "js": [
                "assets/injector.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "interceptor.js",
                "icon.png"
            ],
            "matches": [
                "https://music.youtube.com/*"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ]
}